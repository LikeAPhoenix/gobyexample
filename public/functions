      window.onkeydown = (e) => {
          if (e.ctrlKey || e.altKey || e.shiftKey || e.metaKey) {
              return;
          }
          
          if (e.key == "ArrowLeft") {
              window.location.href = 'maps';
          }
          
          
          if (e.key == "ArrowRight") {
              window.location.href = 'multiple-return-values';
          }
          
      }
  </script>
